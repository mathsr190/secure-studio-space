<header class='top-page-header'>
  <div class='nav'>
    <div>
      <p>スタジオ管理者ヘッダー</p>
      <ul>
        <% if manager_signed_in? %>
          <li><%= link_to "#{current_manager.studio_name} 様ログイン中マイページはこちらから", manager_path(current_manager.id), class: "manager-name" %></li>
          <li><%= link_to 'ログアウト', destroy_manager_session_path, method: :delete, class: "logout" %> </li> 
        <% else %>
          <li><%= link_to 'スタジオ管理者ログイン', new_manager_session_path, class: "login" %></li>
          <li><%= link_to 'スタジオ新規登録', new_manager_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
    <div>
    <br/>
      <p>ユーザーヘッダー</p>
      <ul>
        <% if user_signed_in? %>
          <li><%= link_to "#{current_user.last_name}#{current_user.first_name} 様ログイン中マイページはこちらから", user_path(current_user.id), class: "user-name" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %> </li> 
        <% else %>
          <li><%= link_to 'ユーザーログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to 'ユーザー新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>