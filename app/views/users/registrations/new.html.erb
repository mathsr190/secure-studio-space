<%= render "shared/third-header" %>
<div class='body-yellow'>
  <div class='content'>
    <div class = 'form-content-white'>
      <h2 class='form-new-edit-title'>団体・ユーザー新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class='error-messages-div'>
            <%= render "users/shared/error_messages", resource: resource %>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>団体・ユーザー名</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :group_name, autofocus: true, placeholder:"例) ハイドン交響曲制覇オーケストラ", class:"form-input-field" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>団体・ユーザー名(かな)</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :group_name_kana, placeholder:"例) はいどんこうきょうきょくせいはおーけすとら", class:"form-input-field" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>メールアドレス</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.email_field :email, autocomplete: "email", placeholder:"PC・携帯どちらでもOK", class:"form-input-field" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>パスワード</label>
              <span class='indispensable'>必須</span>
              <p>英字と数字の両方最低1文字必要です</p>
            </div>
            <div class='form-input-div'>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字", class:"form-input-field" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>パスワード確認</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力" , class:"form-input-field" %>
            </div>
          </div>
        <h3 class='form-new-edit-subtitle'>以下、団体代表者の情報を入力してください</h3>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>お名前 (全角)</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :last_name, placeholder:"例) 確保", class:"form-input-field-mini" %>
              <%= f.text_field :first_name, placeholder:"例) 太郎", class:"form-input-field-mini" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>お名前(かな) (全角)</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :last_name_kana, placeholder:"例)かくほ", class:"form-input-field-mini" %>
              <%= f.text_field :first_name_kana, placeholder:"例)たろう", class:"form-input-field-mini" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>誕生日</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.date_field :date_of_birth, min: "1900-01-01",  max: Date.today, class:"form-input-field" %>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>電話番号</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.telephone_field :phone_number, id:"phone-number", placeholder:"例) 09012345678", maxlength:"11", class:"form-input-field"%>
            </div>
          </div>
        <h3 class='form-new-edit-subtitle'>以下、団体所属住所(もしくは団体代表者住所)の情報を入力してください</h3>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>郵便番号(半角、ハイフンを入れてください)</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
                <%= f.text_field :postal_code, id:"postal-code", placeholder:"例)123-4567", maxlength:"8", class:"form-input-field"%>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>都道府県</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {include_blank: "---"},{id:"prefecture", class:"form-input-field"})%>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>市区町村</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :city, id:"city", placeholder:"例）音楽区前奏", class:"form-input-field"%>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>それ以降の住所</label>
              <span class='indispensable'>必須</span>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :address, id:"addresses", placeholder:"例）交響曲序曲8-1-10", class:"form-input-field"%>
            </div>
          </div>
          <div class='form-div'>
            <div class='form-div-label'>
              <label>建物名</label>
            </div>
            <div class='form-input-div'>
              <%= f.text_field :building, id:"building", placeholder:"例）オブリガート808号室", class:"form-input-field"%>
            </div>
          </div>
        <%= f.submit "登録", id:"button", class:"form-submit-btn-user"%>
      <% end %>
      <%#= render "users/shared/links" %>
    </div>
  </div>
</div>