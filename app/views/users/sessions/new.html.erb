<%= render "shared/third-header" %>
<div class='body-yellow'>
  <div class='content'>
    <div class = 'form-content-white'>
      <h2 class='form-new-edit-title'>団体・ユーザー新規登録</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='error-messages-div'>
          <%= flash[:notice] %>
          <div class='error-alert'>
            <%= flash[:alert] %>
          </div>
        </div>
        <div class='form-div'>
          <div class='form-div-label'>
            <label>メールアドレス</label>
          </div>
          <div class='form-input-div'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでもOK", class:"form-input-field" %>
          </div>
        </div>
        <div class='form-div'>
          <div class='form-div-label'>
            <label>パスワード</label>
          </div>
          <div class='form-input-div'>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-input-field" %>
          </div>
        </div>
        <%# if devise_mapping.rememberable? %>
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
        <%# end %>
        <%= f.submit "ログイン", id:"button", class:"form-submit-btn-user"%>
      <% end %>
      <%#= render "users/shared/links" %>
    </div>
  </div>
</div>
