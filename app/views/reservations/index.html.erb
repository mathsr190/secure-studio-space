<%= render "shared/third-header" %>
<div class='body'>
  <div class='content'>
    <div class='reservation-form-content'>
      <%= form_with model: @reservation_form, url: studio_space_reservations_path, id: 'reservation-form', local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
      <div>使用開始時刻</div>
      <%= f.datetime_select :time_start, id:"time-start",use_month_numbers: true, date_separator: "/", start_year: DateTime.now.year , end_year: DateTime.now.year + 1 , default: DateTime.new(DateTime.now.year,DateTime.now.month,DateTime.now.day,DateTime.now.hour,00,00)+Rational("1/24"), discard_minute:true %>
      <div>使用終了時刻</div>
      <%= f.datetime_select :time_end, id:"time-end",use_month_numbers: true, date_separator: "/", start_year: DateTime.now.year , end_year: DateTime.now.year + 1 , default: DateTime.new(DateTime.now.year,DateTime.now.month,DateTime.now.day,DateTime.now.hour,00,00)+Rational("1/24"), discard_minute:true %>

      <div>値段</div>
      <%= f.number_field :price, step: '1', min: 50, max: 9999999, id:"price", placeholder:"例）2400"%>

  <div class='form-wrap'>
    <%= f.label :number,  "カード番号" %>
    <%= f.text_field :number, class:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class='form-wrap'>
    <%= f.label :cvc ,"CVC" %>
    <%= f.text_field :cvc, class:"cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
  </div>
  <div class='form-wrap'>
    <p>有効期限</p>
    <div class='input-expiration-date-wrap'>
      <%= f.text_field :exp_month, class:"exp_month", placeholder:"例)3" %>
      <p>月</p>
      <%= f.text_field :exp_year, class:"exp_year", placeholder:"例)25" %>
      <p>年</p>
    </div>
  </div>
<%= f.submit "登録", id:"button_reservation"%>
<% end %>
    </div>


  </div>
</div>
